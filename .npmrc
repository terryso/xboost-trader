# NPM Configuration for XBoost Trader

# Use npm registry
registry=https://registry.npmjs.org/

# Security settings
audit-level=moderate
fund=false

# Installation preferences
prefer-offline=true
progress=true
save-exact=false

# Cache settings
cache=/tmp/npm-cache

# Node.js version requirement
engine-strict=true

# Package-lock settings
package-lock=true

# Optional dependencies handling
optional=true

# Logging
loglevel=warn