# XBoost Trader Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
APP_NAME=xboost-trader

# Database Configuration
DATABASE_PATH=./data/xboost.db
DATABASE_BACKUP_PATH=./data/backups/

# OKX API Configuration (DO NOT COMMIT REAL VALUES)
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_SANDBOX=true

# Trading Configuration
DEFAULT_SLIPPAGE=0.001
MAX_GRID_COUNT=50
MIN_INVESTMENT_AMOUNT=10

# Security Configuration
ENCRYPTION_KEY=generate_secure_32_char_key_here
WALLET_ENCRYPTION_ENABLED=true

# Network Configuration
RPC_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_REQUESTS_PER_SECOND=10

# Monitoring & Notifications
NOTIFICATION_ENABLED=false
NOTIFICATION_WEBHOOK_URL=
ALERT_ON_TRADE_FAILURE=true
ALERT_ON_BALANCE_LOW=true

# Development & Testing
TEST_MODE=false
MOCK_OKX_API=false
DISABLE_REAL_TRADING=true